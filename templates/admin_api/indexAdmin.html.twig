{% extends 'base.html.twig' %}

{% block title %}Hello {{ user.nom }}!{% endblock %}


{% block body %}
    <div class="admin-container">
        <div class="admin-wrapper">
            <h1>Bienvenue sur la page d'administration {{ user.nom }} !</h1>
            <div class="admin-container-section">
                <div class="section">
                    <h2>üéØ Les Tournois</h2>
                    <div class="admin-list-wrapper">
                        {% if tournaments is defined and tournaments|length > 0 %}
                            <ul>
                                {% for tournament in tournaments %}
                                    <a href="/tournament/{{ tournament.id }}">
                                        <li class="card admin-card">
                                            <div class="info">
                                                <strong>Nom:</strong> {{ tournament.nom }}<br>
                                                <strong>Lieu:</strong> {{ tournament.lieu }}<br>
                                                <strong>Date:</strong> {{ tournament.dateDebut|date('d/m/Y') }}<br>
                                            </div>
                                        </li>
                                    </a>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <li>Aucun tournoi trouv√©.</li>
                        {% endif %}
                    </div>
                    <button id="openModal" class="btn btn-primary">Cr√©er un tournoi</button>
                </div>
                <div class="section" style="height: 100%;">
                    <h2>üë• Les Utilisateurs</h2>
                    <div class="admin-list-wrapper">
                        {% if users is defined and users|length > 0 %}
                            <ul>
                                {% for user in users %}
                                    <a href="/user/{{ user.id }}">
                                        <li class="card admin-card">
                                            <div class="info">
                                                <strong>Nom:</strong> {{ user.nom }}<br>
                                            </div>
                                        </li>
                                    </a>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <li>Aucun Utilisateur trouv√© trouv√©.</li>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modal" class="modal">
        <div class="modal-content">
            <span id="closeModal" class="close">&times;</span>
            <h2>Cr√©er un tournoi</h2>
            <form id="createTournamentForm" method="POST" action="{{ path('api_create_tournament') }}">
                <label for="name">Nom :</label>
                <input type="text" id="name" name="name" required>

                <label for="lieu">Lieu :</label>
                <input type="text" id="lieu" name="lieu" required>

                <label for="startDate">Date de d√©but :</label>
                <input type="date" id="startDate" name="startDate" required>

                <label for="endDate">Date de fin :</label>
                <input type="date" id="endDate" name="endDate" required>

                <label for="description">Description :</label>
                <textarea id="description" name="description"></textarea>

                <label for="sport">Sport :</label>
                <input type="text" id="sport" name="sport" required>

                <button type="submit" class="btn btn-primary">‚ú® Cr√©er</button>
            </form>
        </div>
    </div>

    <script>
        const modal = document.getElementById('modal');

        // Ouvre le modal
        document.getElementById('openModal').addEventListener('click', () => {
            modal.style.display = 'block';
        });

        // Ferme le modal
        document.getElementById('closeModal').addEventListener('click', () => {
            modal.style.display = 'none';
        });

        // Ferme si on clique en dehors du contenu
        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Soumission du formulaire
        document.getElementById('createTournamentForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            const jsonData = Object.fromEntries(formData.entries());

            const response = await fetch(form.action, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(jsonData),
            });

            if (response.ok) {
                alert('Tournoi cr√©er avec succ√®s.');
                location.reload();
            } else {
                alert('Erreur lors de la cr√©ation.');
            }
        });
    </script>

{% endblock %}
