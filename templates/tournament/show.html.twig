{% extends 'base.html.twig' %}

{% block title %}Tournoi - {{ tournament.nom }}{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #1f1f1f;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .hero-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            height: 100vh;
            background: radial-gradient(circle at center, #2c2c2c 0%, #111 100%);
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2rem;
        }

        .list-wrapper {
            width: 100%;
            max-width: 800px;
            background: radial-gradient(circle at center, #2c2c2c 0%, #111 100%);
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            padding: 2rem;
            margin-top: 2rem;
        }

        h1 {
            font-size: 2.5rem;
            color: #e63946;
            text-shadow: 2px 2px 8px #000;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .card {
            background: linear-gradient(135deg, #ff4e50, #f9d423);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            color: #2c3e50;
            margin-bottom: 1.5rem;
        }

        .card .info {
            font-size: 1.2rem;
            line-height: 1.8;
        }

        button {
            padding: 0.8rem 2.4rem;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            border-radius: 50px;
            background: linear-gradient(135deg, #f9d423, #ff4e50);
            color: #2c3e50;
            cursor: pointer;
            transition: transform 0.2s ease, background-color 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            margin-top: 1rem;
        }

        button:hover {
            background-color: #f1b500;
            transform: translateY(-4px);
            box-shadow: 0 12px 18px rgba(0, 0, 0, 0.3);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
            border-radius: 8px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="hero-container">
        <div class="container">
            <div class="list-wrapper">
                <h1>Tournoi : {{ tournament.nom }}</h1>
                <div class="card">
                    <div class="info">
                        <strong>Nom :</strong> {{ tournament.nom }}<br>
                        <strong>Lieu :</strong> {{ tournament.lieu }}<br>
                        <strong>Date de début :</strong> {{ tournament.dateDebut|date('d/m/Y') }}<br>
                        <strong>Date de fin :</strong> {{ tournament.dateFin|date('d/m/Y') }}<br>
                        <strong>Description :</strong> {{ tournament.regles }}<br>
                        <strong>Sport :</strong> {{ tournament.sport }}<br>
                    </div>
                </div>
                <button id="openModal">Modifier le tournoi</button>
                <form id="deleteTournamentForm" method="POST" action="{{ path('api_delete_tournament', { id: tournament.id }) }}" style="margin-top: 1rem;">
                    <button type="submit" style="background-color: #e63946; color: white;">Supprimer le tournoi</button>
                </form>
            </div>
        </div>
    </div>

    <div id="modal" class="modal">
        <div class="modal-content">
            <span id="closeModal" class="close">&times;</span>
            <h2>Modifier le tournoi</h2>
            <form id="updateTournamentForm" method="POST" action="{{ path('api_update_tournament', { id: tournament.id }) }}">
                <label for="name">Nom :</label>
                <input type="text" id="name" name="name" value="{{ tournament.nom }}" required><br>

                <label for="lieu">Lieu :</label>
                <input type="text" id="lieu" name="lieu" value="{{ tournament.lieu }}" required><br>

                <label for="startDate">Date de début :</label>
                <input type="date" id="startDate" name="startDate" value="{{ tournament.dateDebut|date('Y-m-d') }}" required><br>

                <label for="endDate">Date de fin :</label>
                <input type="date" id="endDate" name="endDate" value="{{ tournament.dateFin|date('Y-m-d') }}" required><br>

                <label for="description">Description :</label>
                <textarea id="description" name="description" required>{{ tournament.regles }}</textarea><br>

                <label for="sport">Sport :</label>
                <input type="text" id="sport" name="sport" value="{{ tournament.sport }}" required><br>

                <button type="submit">Enregistrer</button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('openModal').addEventListener('click', function () {
            document.getElementById('modal').style.display = 'block';
        });

        document.getElementById('closeModal').addEventListener('click', function () {
            document.getElementById('modal').style.display = 'none';
        });

        window.addEventListener('click', function (event) {
            if (event.target === document.getElementById('modal')) {
                document.getElementById('modal').style.display = 'none';
            }
        });

        document.getElementById('updateTournamentForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const form = e.target;
            const data = new FormData(form);
            const jsonData = Object.fromEntries(data.entries());

            const response = await fetch(form.action, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(jsonData),
            });

            if (response.ok) {
                alert('Tournoi mis à jour avec succès.');
                location.reload();
            } else {
                alert('Erreur lors de la mise à jour.');
            }
        });

        document.getElementById('deleteTournamentForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const form = e.target;

            if (confirm('Êtes-vous sûr de vouloir supprimer ce tournoi ?')) {
                const response = await fetch(form.action, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                });

                if (response.ok) {
                    alert('Tournoi supprimé avec succès.');
                    window.location.href = '/'; // Redirige vers la page d'accueil ou une autre page
                } else {
                    alert('Erreur lors de la suppression du tournoi.');
                }
            }
        });
    </script>

{% endblock %}